<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".VirtualAssistant">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp">

        <TextView
            android:text="Frintext"
            android:textSize="22dp"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Built on Blockchain"
            android:textColor="#FFFF"
            android:textSize="14dp"></TextView>

        <TextView
            android:layout_marginTop="47dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on the bitcoin icon to go back"
            android:textColor="#FFFF"
            android:textSize="14dp"></TextView>

        <TextView
            android:layout_marginTop="87dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key words to use are 'open camera', 'open messages', 'open phonebook', 'open browser'"
            android:textColor="#FFFF"
            android:textSize="14dp"></TextView>

        <ImageView
            android:id="@+id/back"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bitcoin"></ImageView>

        <LinearLayout
            android:id="@+id/wifiBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/speak"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/microphone"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Click to start speaking"
                android:textAllCaps="true"
                android:textColor="#080A43"
                android:textSize="14sp"></TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

